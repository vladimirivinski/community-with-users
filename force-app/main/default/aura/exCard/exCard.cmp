<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
	<aura:attribute name="isModalHidden" type="Boolean" default="true" description="Flag to control modal window" />
	
	<c:exModalWindow isHidden="{!v.isModalHidden}" cancelLabel="cancel" onSaveClick="{! c.onConfirm }" onCancelClick="{! c.onCancel }">
		This is the modal body. Other Aura/LWC components can be embedded here.
	</c:exModalWindow>

	<lightning:card title="Monthly Income">
		<aura:set attribute="actions">
			<lightning:button class="btn-border" label="Edit" variant="destructive-text" onclick="{! c.openModal }" />
		</aura:set>
            
        <div class="slds-grid slds-wrap">
            <div class="slds-col slds-size_2-of-3 slds-var-p-around_small">
            	<div class="slds-text-font_monospace"> Test income</div>
            	<div class="slds-text-body_small slds-text-color_weak"> Amount before tax and other deduction</div>
            </div>
            <div class="slds-col slds-size_1-of-3 slds-var-p-around_small">
            	<div> $ 32200.00</div>
            </div>
            <div class="slds-col slds-size_2-of-3 slds-var-p-around_small">
            	<div class="slds-text-font_monospace"> Test income</div>
            	<div class="slds-text-body_small slds-text-color_weak"> Amount deposited into account after tax deduction</div>
            </div>
            <div class="slds-col slds-size_1-of-3 slds-var-p-around_small">
              	<div> $ 3500.00</div>
            </div>
        </div>
	</lightning:card>
</aura:component>
